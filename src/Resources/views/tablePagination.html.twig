<nav aria-label="Pagination" class="pagination-wrapper">
    <ul class="pagination">
        <li class="page-item {{ currentPage <= 1 ? 'disabled' }}">
            <a class="page-link " href="{{ path(app.request.get('_route'), {'page': currentPage - 1}) }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        {% if firstPage > 1 %}
        <li class="page-item">...</li>
        {% endif %}
        {% for i in firstPage..lastPage %}
        <li class="page-item {{ currentPage == i ? 'active' }}"><a class="page-link" href="{{ path(app.request.get('_route'), {'page': i}) }}"> {{ i }}</a></li>
        {% endfor %}
        {% if lastPage < totalPages %}
            <li class="page-item">...</li>
        {% endif %}
        <li class="page-item {{ currentPage <= totalPages ? 'disabled' }}">
            <a class="page-link" href="{{ path(app.request.get('_route'), {'page': currentPage + 1}) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>